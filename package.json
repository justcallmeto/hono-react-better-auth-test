{
  "name": "hono-react-better-auth",
  "scripts": {
    "server": "bun run --hot backend/index.ts",
    "client": "cd frontend && bun run dev",
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "db:up": "docker compose up -d",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed" : "bun run ./scripts/seed-local-database.scripts.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4",
    "pg": "^8.17.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "drizzle-seed": "^0.3.1"
  }
}